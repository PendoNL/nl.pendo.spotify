{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "nl.pendo.spotify",
  "version": "1.0.0",
  "sdk": 3,
  "brandColor": "#1DB954",
  "compatibility": ">=12.0.0",
  "name": {
    "en": "Spotify"
  },
  "description": {
    "en": "Control your Spotify Connect devices",
    "nl": "Bestuur je Spotify Connect apparaten"
  },
  "author": {
    "name": "Joshua de Gier",
    "email": "joshua@pendo.nl"
  },
  "category": "music",
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "source": "https://github.com/PendoNL/nl.pendo.spotify",
  "homepage": "https://pendo.nl",
  "drivers": [
    {
      "id": "spotify",
      "name": {
        "en": "Spotify"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_playing",
        "speaker_artist",
        "speaker_album",
        "speaker_track",
        "speaker_shuffle",
        "speaker_repeat",
        "speaker_next",
        "speaker_prev",
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "capabilitiesOptions": {
        "volume_set": {
          "min": 0,
          "max": 1,
          "step": 0.01
        }
      },
      "images": {
        "large": "/drivers/spotify/assets/images/large.jpg",
        "small": "/drivers/spotify/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices_singular",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "repair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        }
      ]
    }
  ]
